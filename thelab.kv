BoxLayoutExample:

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "ButtonA"
        size: "40dp", "80dp" # size property does not work in box layout
    Button:
        text: "ButtonB"
    Button:
        text: "ButtonC"


<MainWidget>:
    Button:
        text: "Button"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1

    Label:
        text: "Button2"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1 # r, g, b, a
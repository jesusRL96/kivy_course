GridLayoutExample:

<GridLayoutExample@GridLayout>:
    # rows: 2
    cols: 3
    Button:
        text: "ButtonA"
        # size_hint: .5, 1
        size_hint: None, 1
        width: "80dp"
    BoxLayoutExample:
    Button:
        text: "ButtonC"
    Button:
        text: "ButtonD"
        # size_hint: .5, 1
        size_hint: None, 1
        width: "80dp"
    Button:
        text: "ButtonE"
    Button:
        text: "ButtonF"


<AnchorLayoutExample>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "top"
    BoxLayout:
        orientation: "horizontal"
        size_hint: .2, .5
        Button:
            text: "ButtonA"
        Button:
            text: "ButtonB"

<BoxLayoutExample>:
    # orientation: "vertical"
    orientation: "horizontal"
    Button:
        text: "ButtonA"
        #size: "40dp", "80dp" 
        # size_hint: .25, None # None allows to use size prop
        size_hint: .5, .25
        height: "100dp"
        pos_hint: {"top":.5}
        pos_hint: {"center_y":.5}
        pos_hint: {"y":.5}

    BoxLayout:
        orientation: "vertical"
        spacing: "5dp"
        Button:
            text: "ButtonB1"
        Button:
            text: "ButtonB2"
        Button:
            text: "ButtonB3"
        Button:
            text: "ButtonB4"
    Button:
        text: "ButtonC"



<MainWidget>:
    Button:
        text: "Button"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1

    Label:
        text: "Button2"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1 # r, g, b, a
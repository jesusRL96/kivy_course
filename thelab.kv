<WidgetExamples>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"

    Button:
        text: "Count"
        on_press: root.on_button_click()
        disabled: not root.count_enable

    Label:
        font_name: "RESOURCES/fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1,1,0,1
        text: root.my_text
    
    Switch:
        id: my_switch
        size_hint: None, 1
        width: "100dp"
        on_active: root.on_switch_active(self)
        active: True

    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
        on_value: root.on_slider_value(self)
        disabled: not my_switch.active

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Value: {0:.2f}".format(my_slider.value)

        ProgressBar:
            max: 100
            value: my_slider.value
    
    TextInput:
        id: my_textinput
        size_hint: None, 1
        width: "100dp"
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)

    Label:
        text: "Text: " + root.text_input_str

